<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sims.chareyron.petanque.javafx.view.tournoi.classique.joueurs.JoueursPrincipalView">
   <children>
      <AnchorPane>
         <children>
            <TitledPane contentDisplay="CENTER" text="Ajouter une équipe" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <content>
                  <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columnConstraints>
                      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Joueur 1">
                           <padding>
                              <Insets right="5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="joueur1" GridPane.columnIndex="1" />
                        <Label text="Joueur 2" GridPane.rowIndex="1">
                           <padding>
                              <Insets right="5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="joueur2" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Button fx:id="creerEquipe" defaultButton="true" mnemonicParsing="false" onAction="#onAjouterEquipeClicked" text="Ajouter l'équipe" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
               </content>
            </TitledPane>
         </children>
      </AnchorPane>
      <TitledPane animated="false" text="Equipes">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <TableView fx:id="equipeTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="joueur1Column" prefWidth="75.0" text="Joueur 1" />
                      <TableColumn fx:id="joueur2Column" prefWidth="75.0" text="Joueur 2" />
                        <TableColumn prefWidth="75.0" text="Actions" />
                    </columns>
                  </TableView>
               </children>
            </AnchorPane>
        </content>
         <padding>
            <Insets top="20.0" />
         </padding>
      </TitledPane>
   </children>
</VBox>
